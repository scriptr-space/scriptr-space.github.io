<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "space.scriptr"
    versionCode = "1"
    version     = "0.0.1" >

  <name>Scriptr</name>

  <description>
    A better way to code with Google Apps Script   
  </description>

  <author href="https://scriptr.space" email="hello@scriptr.space">
      Scriptr.space
  </author>
  
  <plugin name="cordova-plugin-whitelist" spec="1" />

  <access origin="*"></access>
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  
  <icon src="ico/apple-icon-57x57.png" platform="ios" width="57" height="57" density="mdpi" />
  
  <platform name="android">
    <icon src="ico/android-icon-36x36.png" density="ldpi" />
    <icon src="ico/android-icon-48x48.png" density="mdpi" />
    <icon src="ico/android-icon-72x72.png" density="hdpi" />
    <icon src="ico/android-icon-96x96.png" density="xhdpi" />
    <icon src="ico/android-icon-144x144.png" density="xxhdpi" />
    <icon src="ico/android-icon-192x192.png" density="xxxhdpi" />
  </platform>
  <platform name="ios">
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="ico/apple-icon-180x180.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="ico/apple-icon-60x60.png" width="60" height="60" />
    <icon src="ico/apple-icon-120x120.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="ico/apple-icon-76x76.png" width="76" height="76" />
    <icon src="ico/apple-icon-152x152.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- iPhone / iPod Touch -->
    <icon src="ico/apple-icon-57x57.png" width="57" height="57" />
    <icon src="ico/apple-icon-114x114.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="ico/apple-icon-72x72.png" width="72" height="72" />
    <icon src="ico/apple-icon-144x144.png" width="144" height="144" />
  </platform>  
</widget>